
<div class="form-container" data-controller="stars" >

  <%= simple_form_for([@diving, @participation]) do |f| %>


    <div class="input-case">
      <%= f.input :depth, label: "HOW DEEP DID YOU DIVE?"  %>
    </div>

    <div class="input-case">
      <%= f.input :diving_time, html5: true, label: "TIME UNDERWATER?"%>
    </div>

    <div class="input-case">
      <%= f.input :gas, label: "SELECT YOUR AIR", collection: ["air", "nitrox", "trimix", "helios", "oxygen", "argon"], include_blank: "Select the gas used" %>
    </div>

    <div class="input-case">
      <%= f.input :comment, label: "WHAT ABOUT YOUR FEELINGS?"%>
    </div>

    <div class="input-case mb-4">
      <%= f.input :photo, as: :file, label: false %>
    </div>

    <div class="stars-rating mb-4">
      <% 5.times do |i| %>
        <i class="fa-regular fa-star" style="color: #10A59C;" data-stars-target="rating"  data-action="click->stars#fill" data-value=<%= i + 1 %>></i>
      <% end %>
      <%= f.input :rating, as: :hidden, input_html: { data: {stars_target: "ratingInput"} }%>
    </div>

    <div class="button-container">
      <%= f.submit value: "Confirm", class: "btn"%>
    </div>

  <% end %>
</div>
