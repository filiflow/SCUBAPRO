<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1527100673774-cce25eafaf7f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80');">

  <div class="show-container">

    <div class="row">
      <div class="col-12">
        <%# <img src="https://diveraid.com/wp-content/uploads/2023/03/start-diving.jpg" alt="diving"> %>
        <%= cl_image_tag @participation.diving.spot.photo.key, height: 300, width: 400, crop: :fill %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="text-container">
          <h2 id="title"><%= @participation.diving.spot.name %></h2>
          <p id="rating">
            <% if @participation.rating %>
              <% (@participation.rating).times do %>
                <i class="fa-solid fa-star" style="color: #ffd43b;"></i>
              <% end %>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-6">
        <p><%= (@participation.diving.date).strftime("%d/%m/%Y") %></p>
        <p>Weather : <%= @participation.diving.weather %></p>
        <p>Water temperature : <%= @participation.diving.temperature %>Â°C</p>
        <p>Visibility : <%= @participation.diving.visibility %>m</p>
      </div>
      <div class="col-6">
        <p>School : <%= @participation.diving.school.name %></p>
        <p>Dive master : <%= @participation.diving.school.dive_master %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-6">
        <p>Wildlife observed : </p>
      </div>
      <div class="col-6">
        <p>Depth : <%= @participation.depth %>m</p>
        <p>Gas used : <%= @participation.gas %></p>
        <p>Diving time : <%= @participation.diving_time %>min</p>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <p>Comments : <%= @participation.comment %></p>
      </div>
    </div>

    <div class="carousel-inner">
      <% @participation.photos.each do |photo| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <div class="carousel-caption d-md-block">
            <%= cl_image_tag @participation.photo.key %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="action-icons">
          <%= link_to '<i class="fa-regular fa-pen-to-square" style="color: #FFFFFF;"></i>'.html_safe, edit_diving_participation_path(@participation.diving, @participation) %>
          <%= link_to '<i class="fa-regular fa-trash-can" style="color: #FFFFFF;"></i>'.html_safe, participation_path(@participation), data: { turbo_method: :delete, turbo_confirm: "Do you really want to delete this participation?" } %>
        </div>
      </div>
    </div>
  </div>
</div>
