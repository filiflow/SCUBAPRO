<div class="background-new">

  <div class="homepage-container">
    <h4>Your last dives</h4>
    <%= render 'pages/partials/carousel' %>
    <%# <%= render 'pages/partials/map' %>
  </div>

<div class="stats_home">
  <div class="statistic">
    <h3>Total diving time</h3>
    <% if @total_diving_time > 60 %>
      <% hours = @total_diving_time / 60 %>
      <% minutes = @total_diving_time % 60 %>
      <p><%= "#{hours}h#{sprintf('%02d', minutes)}" %></p>
    <% else %>
      <p><%= @total_diving_time %> minutes</p>
    <% end %>
  </div>

  <div class="statistic">
    <h1 class="number"><%= @max_depth %>M</h1>
    <h5>Max Depth</h5>
  </div>

  <div class="statistic">
    <h1 class="number"><%= @total_dives %></h1>
    <h5>Dives</h5>
  </div>

<%# Attention à modifier %>
  <div class="statistic">
    <h1 class="number"><%= @total_dives %></h1>
    <h5>Species seen</h5>
  </div>
<%# Attention à modifier %>

  <div class="statistic">
    <h1 class="number"><%= @total_spots %></h1>
    <h5>Spots visited</h5>
  </div>
</div>
