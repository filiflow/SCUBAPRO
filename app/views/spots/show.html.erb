<div class="background">

  <% content_for :page_title, "Welcome to,"%>

    <div class="container">

      <%# TITLE %>
      <h3 class="titles"> <%= @spot.name %> <i class="fa-solid fa-umbrella-beach" style="color: #557ec3;"></i> </h3>

      <%# SPOT %>
      <div class="spot-description">
        <%= cl_image_tag @spot.photo.key, class:'spot-photo' %>
        <%= @spot.description %>
      </div>

      <%# DIVING LIST %>
      <div class="diving-date-list">
        <h5>Dives registered on this spot :</h5>
            <% @divings.each do |diving| %>
              <li class="list-divings">
                <p> <%= (diving.date).strftime("%d/%m/%Y") %>  <%= link_to '<i class="fa-solid fa-user-plus" style="color: #09339E"></i>'.html_safe, new_diving_participation_path(diving)%> </p>
              </li>
            <% end %>
      </div>

    </div>
</div>

<%= render 'shared/tapbar' %>
